<%= simple_form_for :user, url: log_in_path(:email, :password) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean %>
  </div>
<% end %>

<div class="sign-in-links-container">
  <%= link_to new_user_password_path do %>
      <div class="job-page-sign-in-links">Forgot your password?</div>
  <% end %>
  <%= link_to new_user_registration_path do %>
      <div class="job-page-sign-in-links">Sign up</div>
  <% end %>
</div>

