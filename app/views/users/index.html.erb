<div class="grey-wrapper">
  <div class="container">
    <div class="white-card">
      <h1>Developers</h1>
    </div>
  </div>

  <% @developers.each do |developer| %>
    <div class="container">
      <div class="white-card">
        <h2><%= developer.first_name %> <%= developer.last_name %></h2>
        <p><%= developer.tagline %></p>
        <p><%= developer.email %></p>
        <p><%= developer.bio %></p>
        <% if current_user.jobs.length > 0 %>
          <%= link_to "Invite to bid on my project", user_bids_new_path(developer), class:'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
